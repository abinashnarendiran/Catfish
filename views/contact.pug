extends layout

block content
  h1 #{title}
  form(action='/processContact/', method='post', class='form-horizontal')
    label(class='control-label', for='name') Name:
    div(class='form-group')
      input(type='text',
            id='name',
            name='name',
            placeholder='Name',
            class='form-control')
    label(class='control-label', for='email') Email:
    div(class='form-group')
      input(type='text',
            id='email',
            name='email',
            placeholder='Email',
            class='form-control')
    label(class='control-label', for='message') Message:
    div(class='form-group')
      input(type='text',
            id='message',
            name='message',
            placeholder='Message',
            class='form-control')
  
    div(class='text-center')
      button(type='submit', class='btn btn-primary') Submit
